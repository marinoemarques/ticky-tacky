{
  "name": "ticky-tacky",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@types/react-dom": "^16.0.11",
    "ramda": "^0.26.1",
    "ramda-adjunct": "^2.13.0",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-helmet": "^5.2.0",
    "react-scripts": "2.1.1",
    "styled-components": "^4.1.3",
    "styled-map": "^3.2.0-rc.1",
    "styled-normalize": "^8.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "cov": "react-scripts test --coverage",
    "format": "standard 'src/**/*.js' --fix"
  },

    "standard": {
      "env": [
        "jest"
      ],
      "globals": [
        "fetch",
        "toJson"
      ]
    },

  "eslintConfig": {
    "extends": "react-app"
  },

  "jest": {
    "collectCoverageFrom": [
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/serviceWorker.js",
      "src/**/*.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },

  "lint-staged": {
    "src/**/*.js": [
      "standard --fix",
      "git add"
    ]
  },

  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.2.1",
    "importSort": {
      ".js": {
        "parser": "babylon",
        "style": "airkro"
      }
    },
    "import-sort": "^5.2.0",
    "import-sort-style-airkro": "^0.1.5",
    "jest-dom": "^3.0.0",
    "jest-enzyme": "^7.0.1",
    "jest-in-case": "^1.0.2",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.0",
    "react-test-renderer": "^16.7.0-alpha.2",
    "react-testing-library": "^5.4.0",
    "standard": "^12.0.1"
  }
}
